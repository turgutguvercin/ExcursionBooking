@model List<AppUser>

<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
<div class="form">
    <h1>All Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Actions</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>

                    <td>
                        <a asp-controller="Account" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="UserBookings" asp-route-id="@user.Id"
                            class="btn btn-secondary ">
                            Show Bookings
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>