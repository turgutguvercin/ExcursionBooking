<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Excursion</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Excursion.styles.css" asp-append-version="true" />
</head>

<body >
    <header>
        <nav >
        <div id="first-navbar-section">
            <img id="logo" src="/Content/Images/logo.png" alt=""> <a asp-area="" asp-controller="Home" asp-action="Index">DISCOVER TOKYO</a> <!--taken from: pngitem.com-->
        </div>
        <div id="second-navbar-section">
            <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tour"
                                asp-action="Index">Tours</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard"
                                    asp-action="Index">Dashboard</a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                                    asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                                    asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                                    asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>   

        </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

     <footer>

        <div class="footer-buttons">
            <span>Copyright ©2023 | TRG </span>
            <div class="footer-nav">
                <ul>
                    <li>About Us</li>
                    <li>About Tokyo</li>
                    <li>Contact</li>
                </ul>
            </div>
        </div>
        <hr>
        <div class="footer-social"><!--taken from: fontawesome.com-->
            <ul>
                <li><i class="fa-brands fa-facebook fa-2x"></i></li>
                <li><i class="fa-brands fa-instagram fa-2x"></i></li>
                <li><i class="fa-brands fa-twitter fa-2x"></i></li>
            </ul>
            
            
            
        </div>
        
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
       <script src="https://kit.fontawesome.com/1a299f34bf.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
<script>
    $(document).ready(function () {
        var path = window.location.pathname;
        if (path == "/") { // If it's home page
            $('body').attr('id', 'homepage');
        } else {
            $('body').removeAttr('id');
        }
    });
</script>   