@using Excursion.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up";
}

<div class="form">
    <p>
    <h3>Sign up for a new account</h3>
    </p>

    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"] </span>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }


    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="EmailAddress" class="control-label"></label>
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="alert"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="alert"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="alert"></span>
        </div>

        <div class="form-group">
            <input class="btn btn-secondary" asp-controller="Account" asp-action="Register" type="submit" value="Sign up" />
        </div>

        <div class="registration-guide form-group">
            <p>By creating account you agree to <a href="#">terms & conditions</a>.</p>
            <br>
            <hr>
            <p>Already have an account?<a href="./login"> Click here to sign in.</a></p>
        </div>

    </form>

</div>

@if (ViewBag.JavaScriptFunction != null)
{
    <script type="text/javascript">
        @Html.Raw(ViewBag.JavaScriptFunction)

            function redirectAfterTimeout() {
                setTimeout('Redirect()', 4000);
            }
        function Redirect() {
            window.location = "/Account/login";
        }
    </script>
}

